{# templates/security/request_login_link.html.twig #}
{% extends 'frontend.html.twig' %}

{% block title %}
	Se connecter - {{ parent() }}
{% endblock title %}

{% block body %}
{% for message in app.flashes('notification') %}
<div class="alert alert-warning alert-dismissible fade show mt-5">
	{{ message }}
	<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span
			aria-hidden="true">&times;</span></button>
</div>
{% endfor %}

<!-- Login 4 - Bootstrap Brain Component -->
<section class="p-3 p-md-4 p-xl-5">
	<div class="container">
	  <div class="card border-light-subtle shadow-sm">
		<div class="row g-0">
		  <div class="col-12 ">
			<div class="card-body p-3 p-md-4 p-xl-5">
			  <div class="row">
				<div class="col-12">
				  <div class="mb-5">
					<h3>Se connecter</h3>
				  </div>
				</div>
			  </div>
			  <form action="{{ path('app_frontend_login') }}" method="POST">
				<div class="row gy-3 gy-md-4 overflow-hidden">
				  <div class="col-12">
					<label for="email" class="form-label">Email <span class="text-danger">*</span></label>
					<input type="email" class="form-control" name="email" id="email" placeholder="Votre email" required>
				  </div>
				  <div class="col-12">
					<div class="d-grid">
					  <button class="btn bsb-btn-xl btn-primary" type="submit">Envoyer le lien</button>
					</div>
				  </div>
				</div>
			  </form>
			</div>
		  </div>
		</div>
	  </div>
	</div>
  </section>
{% endblock %}