{# templates/admin/my_dashboard.html.twig #}
{% extends '@EasyAdmin/layout.html.twig' %}

{% macro statisticCard(fa, label, count) %}
	<div
		class="card hover-lift hover-shadow-xl shadow-sm border-0">
		<!--card-body-->
		<div class="card-body p-4">
			<div class="d-flex mb-4 align-items-center">
				<i class="fa fa-{{ fa }} fa-fw fa-3x"></i>
			</div>
			<h5>{{ label }}</h5>
			<p class="mb-0 h4">{{ count }}</p>
		</div>
		<!--link-->
		{# <a href="#!" class="stretched-link">Link</a> #}
	</div>
{% endmacro %}

{% block main %}
	<style></style>

	<div class="row">
		<div class="col-lg-6 col-md-6 mb-4">
			{{ _self.statisticCard('comment', 'Demandes en attente', statistics.request_awaiting) }}
		</div>
		<div class="col-lg-6 col-md-6 mb-4">
			{{ _self.statisticCard('leaf', 'Partenariat depuis le début', statistics.sponsorship_from_start) }}
		</div>
		<div class="col-lg-6 col-md-6 mb-4">
			{{ _self.statisticCard('graduation-cap', 'Étudiants inscrit depuis le début', statistics.student_from_start) }}
		</div>
		<div class="col-lg-6 col-md-6 mb-4">
			{{ _self.statisticCard('user', 'Parrain depuis le début', statistics.sponsor_from_start) }}
		</div>
	</div>

	<p>

		-          Historique : combien il y a eu de parrainage depuis le début de la plateforme<br/>

		-          Total étudiants : combien il y a eu d’inscrit depuis le début de la plateforme ( en attente de parrainage + en cours de parrainage + parrainage fini)<br/>

		-          Total parrains : combien il y a eu d’inscrit depuis le début de la plateforme ( en attente de parrainage + en cours de parrainage + parrainage fini)<br/>

		-          Parrainage en attente : combien il y a de parrainage en attente<br/>
	</p>
{% endblock main %}
