{% extends '@!EasyAdmin/crud/detail.html.twig' %}


{% block main %}
	{{ parent() }}

	{#  #}
	<div class="row row-cols-2">
		{# Student #}
		{% set r = entity.instance.request %}
		<div class="col">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">
						<i class="fa-solid fa-graduation-cap"></i> {{ r.person.fullName }}
					</h5>
				</div>
				<div class="card-footer text-right">
					{% set url = ea_url()
						.setController('App\\Controller\\Admin\\StudentCrudController')
						.setAction('detail')
						.setEntityId(r.id) %}
					<a href="{{ url }}" class="btn btn-primary">Voir le profil</a>
				</div>
			</div>
		</div>
		{# Sponsor #}
		{% set r = entity.instance.proposal %}
		<div class="col">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">
						<i class="fa-solid fa-user"></i> {{ r.person.firstName }} {{ r.person.lastName }}
					</h5>
				</div>
				<div class="card-footer text-right">
					{% set url = ea_url()
						.setController('App\\Controller\\Admin\\SponsorCrudController')
						.setAction('detail')
						.setEntityId(r.id) %}
					<a href="{{ url }}" class="btn btn-primary">Voir le profil</a>
				</div>
			</div>
		</div>
	</div>

	<div class="row py-5">
		<div class="col">
			<h2 class="h4">Activities</h2>
			{{ render(controller(
				'App\\Controller\\ActivityController::list', {fqcn: 'App\\Entity\\Sponsorship', id: entity.instance.id}
			)) }}
		</div>
	</div>

{% endblock %}
