{% extends '@EasyAdmin/layout.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <h1 class="mb-4">Exports de données</h1>

        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Export des personnes</h5>
                        <p class="card-text">Exportez toutes les personnes (étudiants et parrains) avec leurs informations de contact et leurs sponsorships en cours.</p>
                        <a href="{{ path('admin_export_personnes') }}" class="btn btn-primary">
                            <i class="fa fa-download"></i> Télécharger
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Export des sponsorships</h5>
                        <p class="card-text">Exportez tous les sponsorships avec les informations des étudiants et des parrains associés.</p>
                        <a href="{{ path('admin_export_sponsorships') }}" class="btn btn-primary">
                            <i class="fa fa-download"></i> Télécharger
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 