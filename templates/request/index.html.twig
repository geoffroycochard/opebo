{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}

    <div class="row mt-6">
        <div class="col-md-12 col-12">
            <div class="card">
                <div class="card-header bg-white  py-4">
                    <h4 class="mb-0">All request from student</h4>
                </div>
                <div class="table-responsive">
                    <table class="table text-nowrap mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Id</th>
                                <th>Student</th>
                                <th>Language</th>
                                <th>Objective</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for request in requests %}
                            <tr>
                                <td class="align-middle">{{ request.id }}</td>
                                <td class="align-middle">{{ request.person.firstname }} {{ request.person.lastname }}</td>
                                <td class="align-middle">
                                    {% for language in request.language %}
                                        {{ language.name }}
                                    {% endfor %}
                                </td>
                                <td class="align-middle">
                                    {% for objective in request.objective %}
                                        {{ objective.name }}
                                    {% endfor %}
                                </td>
                                </td>
                                <td class="align-middle">{{ request.status }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
