{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}

    <div class="row mt-6">
        <div class="col-md-12 col-12">
            <div class="card">
                <div class="card-header bg-white  py-4">
                    <h4 class="mb-0">Potential sponsorship for request id {{ requestId }}</h4>
                </div>
                <div class="table-responsive">
                    <table class="table text-nowrap mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Id</th>
                                <th>Score</th>
                                <th>Poposal.person.lastname</th>
                                <th>Resume</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for sponsorship in sponsorships %}
                            <tr>
                                <td class="align-middle">{{ sponsorship.id }}</td>
                                <td class="align-middle">{{ sponsorship.score }}</td>
                                <td class="align-middle">{{ sponsorship.proposal.person.lastname }}</td>
                                <td class="align-middle">
                                <ul>
                                {% for kpi, score in sponsorship.resume %}
                                    <li>{{ kpi }} : {{ score }}</li>
                                {% endfor %}
                                </ul>
                                </td>
                                <td class="align-middle">
                                    <a href="#" class="btn btn-primary">Validate</a>
                                    <a href="#" class="btn btn-danger">Refuse</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
