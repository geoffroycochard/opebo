{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}

    <div class="row mt-6">
        <div class="col-md-12 col-12">
            <div class="card">
                <div class="card-header bg-white  py-4">
                    <h4 class="mb-0">Active Students</h4>
                </div>
                <div class="table-responsive">
                    <table class="table text-nowrap mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Id</th>
                                <th>Civility</th>
                                <th>Firstname</th>
                                <th>Lastname</th>
                                <th>Phone</th>
                                <th>State</th>
                                <th>CreatedAt</th>
                                <th>UpdatedAt</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for student in students %}
                            <tr>
                                <td class="align-middle">{{ student.id }}</td>
                                <td class="align-middle">{{ student.civility }}</td>
                                <td class="align-middle">{{ student.firstname }}</td>
                                <td class="align-middle">{{ student.lastname }}</td>
                                <td class="align-middle">{{ student.phone }}</td>
                                <td class="align-middle">{{ student.state }}</td>
                                <td class="align-middle">{{ student.createdAt ? student.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td class="align-middle">{{ student.updatedAt ? student.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td class="align-middle">
                                    <a href="{{ path('app_student_show', {'id': student.id}) }}">show</a>
                                    <a href="{{ path('app_student_edit', {'id': student.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="card-footer bg-white text-center">
                    <a href="{{ path('app_student_new') }}" class="link-primary">Create </a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
